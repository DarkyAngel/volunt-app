<div class="container">
  <div class="row">
   <span class="text-info notice"><%= notice %></span>
  </div>
  <div class="row">
    <dl class="dl-horizontal project">
      <dt>Name<dt>
      <dd><%= @project.name %></dd>
      <dt>Description<dt>
      <dd><%= @project.description %></dd>
      <dt>Tags</dt>
      <dd><%= render partial: 'shared/tags', locals: {tags: @project.tags} %></dd>
      <dd>
        <%= form_for(@project, method: :delete) do %>
          <div class="btn-group" role='group'>
            <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-default' %>
            <input type='submit' value='Delete' class =  'btn btn-danger' />
          </div>
        <% end %>
      </dd>
    </dl>
  </div>
</div>
