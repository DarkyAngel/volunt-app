<div class="container">
  <div class="row">
   <span class="text-info notice"><%= notice %></span>
  </div>
  <div class="row">
    <dl class="dl-horizontal">
      <dt>Membru<dt>
      <dd><%= profile_with_link(@member.profile) %></dd>
      <dt>Proiect<dt>
      <dd><%= project_with_link(@member.project) %>
      <dt>Rol<dt>
      <dd><%= @member.role %></dd>
      <dd>
        <%= form_for(@member, url: project_member_path(@project, @member), method: :delete) do |f| %>
          <div class="btn-group" role='group'>
            <%= link_to 'Edit', edit_project_member_path(@project, @member), class: 'btn btn-default' %>
            <%= f.submit 'Delete', class: 'btn btn-danger', data: {confirm: 'Elimina din proiect?'} %>
          </div>
        <% end %>
      </dd>
    </dl>
  </div>
</div>
