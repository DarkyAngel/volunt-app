<div class="container">
  <div class="row">
   <span class="text-info notice"><%= notice %></span>
  </div>
  <div class="row">
    <dl class="dl-horizontal">
      <dt>Membru<dt>
      <dd><%= @member.profile.full_name %> <%= glyphicon_link_to detect_profile_path(@member.profile) %></dd>
      <dt>Proiect<dt>
      <dd><%= @member.project.name %> <%= glyphicon_link_to project_path(@member.project) %></dd>
      <dt>Rol<dt>
      <dd><%= @member.role %></dd>
      <dd>
        <%= form_for(@member, url: project_member_path(@project, @member), method: :delete) do %>
          <div class="btn-group" role='group'>
            <%= link_to 'Edit', edit_project_member_path(@project, @member), class: 'btn btn-default' %>
            <input type='submit' value='Delete' class =  'btn btn-danger' />
          </div>
        <% end %>
      </dd>
    </dl>
  </div>
</div>
