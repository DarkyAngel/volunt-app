<div class="container">
  <div class="row">
    <table class="table fixed-table">
      <colgroup>
        <col class="col-xs-4"/>
        <col class="col-xs-4"/>
        <col class="col-xs-3"/>
        <col class="col-xs-1"/>
      </colgroup>
      <thead>
        <tr>
          <th>Nume</th>
          <th>Proiect</th>
          <th>Rol</th>
          <th></th> <!-- the emtpy column is for the export_csv button -->
        <tr>
      </thead>
      <tbody>
        <% @profiles.each do |p| %>
          <% p.memberships.each do |m| %>
            <tr>
              <td><%= profile_with_link(p) %></td>
              <td><%= project_with_link(m.project) %></td>
              <td><%= m.role %></td>
              <td></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
