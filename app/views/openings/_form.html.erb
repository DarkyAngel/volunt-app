<%= bootstrap_form_for(opening,
    layout: :horizontal,
    url: form_submit_path,
    label_col: 'col-sm-3',
    control_col: 'col-sm-9',
    role: :form) do |f| %>

    <%= f.text_field :title, label: 'Titlu' %>
    <%= f.collection_select(:project_id,
        Project.all,
        :id,
        :name,
        label: 'Proiect',
        include_blank: true) %> 
    <%= f.text_area :description %>
    <%= f.date_field :deadline,
        label: 'Data limita de aplicare',
        placeholder: 1.week.from_now.to_date,
        help: 'Data de la care anuntul nu mai este afisat' %>
    <%= f.date_field :publish_date,
        label: 'Data publicarii',
        placeholder: 1.day.from_now.to_date,
        help: 'Data de la care anuntul incepe sa fie afisat pentru comunitate' %>
    <%= f.text_field :tags_string, 
          placeholder: tags_placeholder %>
    <%= f.text_field :skills_string,
          placeholder: skills_placeholder %>
    <%= f.text_area :experience %>
    <%= f.text_field :contact, help: 'Contact (daca este diferit de liderul proiectului)' %>
    <%= yield f %>
<% end %>
<script>
  $(function() {
    $('#opening_description').summernote();
    $('#opening_experience').summernote();
  });
</script>
