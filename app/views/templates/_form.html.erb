<%= bootstrap_form_for(template,
    layout: :horizontal,
    label_col: 'col-sm-3',
    control_col: 'col-sm-9',
    role: :form) do |f| %>

    <%= f.text_field :name, placeholder: 'Template  name' %>
    <%= f.text_field :tags_string, label: 'Tags', placeholder: 'Tags, separated by , or ;' %>
    <%= f.text_field :subject, placeholder: 'Email subject' %>
    <%= f.text_area :body, help: 'Foloseste %NICKNAME% pentru nume', data: html_text_area %>
    <%= yield f %>
<% end %>
